@model IEnumerable<WebMVCwithSSMS.MVC.Models.ToDo>

<h1>Task List</h1>
<table>
    <thead>
        <tr>
            <th>Task</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Task</td>
                <td>@task.IsCompleted</td>
            </tr>
        }
    </tbody>
</table>

<h2>Add a New Task</h2>
<form asp-action="AddTask" method="post">
    <input type="text" name="TaskName" placeholder="Enter task" required />
    <button type="submit">Add Task</button>
</form>
